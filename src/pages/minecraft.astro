<Layout title="Rabbit Hosting - Minecraft Hosting" trustpilot sellix>
	<Navbar></Navbar>

	<ServicePreview
		title="Minecraft Hosting"
		description="It is an independent computer game designed in 2009 by self-taught Swedish programmer Markus Persson, who claims it now has over 100 million registered users."
		image="/images/services/minecraft.jpg">
	</ServicePreview>

	<Packages>
		<Package
			title="Bungee Rabbit"
			description="Only for Proxy (Bungeecord) servers."
			price="3.00"
			productID="6434ffb137e40"
			template="bungee-rabbit">
		</Package>
		<Package
			title="Sleepy Rabbit"
			description="For small-sized Minecraft servers."
			price="7.50"
			productID="6434f5f51dff5"
			template="sleepy-rabbit">
		</Package>
		<Package
			title="Fast Rabbit"
			description="For medium-sized Minecraft servers."
			price="15.00"
			productID="64833f75b79f9"
			template="fast-rabbit"
			popular>
		</Package>
		<Package
			title="Crazy Rabbit"
			description="For large-sized Minecraft servers."
			price="22.50"
			productID="64833fd8a00e1"
			template="crazy-rabbit">
		</Package>
		<Package
			title="Turbo Rabbit"
			description="For extra large-sized Minecraft servers."
			price="30.00"
			productID="64834029ce15d"
			template="turbo-rabbit">
		</Package>
		<Package
			title="Insane Rabbit"
			description="In our opinion too much for Minecraft."
			price="37.50"
			productID="648340829b741"
			template="insane-rabbit">
		</Package>
	</Packages>

	<Comparison
		providers={providers}
		date="November 1st, 2021">
	</Comparison>

	<Footer></Footer>
	<script is:inline src="/js/default.js"></script>
</Layout>