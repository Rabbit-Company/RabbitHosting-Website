---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../layouts/Navbar.astro";
import Footer from "../../layouts/Footer.astro";

import GamesLayout from "../../layouts/Games.astro";
import Game from "../../layouts/Game.astro";
---

<Layout title="Rabbit Hosting - Games">
	<Navbar active="games"></Navbar>
	<GamesLayout>
		<Game
			title="Minecraft Hosting"
			path="/games/minecraft"
			image="/images/services/minecraft-logo.png">
		</Game>
		<Game
			title="Terraria Hosting"
			path="/games/terraria"
			image="/images/services/terraria-logo.png"
			rounded>
		</Game>
		<Game
			title="Unturned Hosting"
			path="/games/unturned"
			image="/images/services/unturned-logo.png">
		</Game>
		<Game
			title="CSGO Hosting"
			path="/games/csgo"
			image="/images/services/csgo-logo.png"
			rounded>
		</Game>
		<Game
		title="Arma 3 Hosting"
		path="/games/arma3"
		image="/images/services/arma3-logo.png"
		rounded>
	</Game>
	</GamesLayout>
	<Footer></Footer>
	<script is:inline src="/js/default.js"></script>
</Layout>