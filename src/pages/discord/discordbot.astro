---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../layouts/Navbar.astro";
import Footer from "../../layouts/Footer.astro";

import ServicePreview from "../../layouts/ServicePreview.astro";
import Packages from "./node.astro";
import Packages2 from "./py.astro";
import Package from "../../layouts/Package.astro";
import EmptyComparison from "../../layouts/EmptyComparison.astro";

const sleepRabbit = [
	"1GB RAM",
	"15GB Nvme Storage",
	"0.25 dedicated Ryzen 9 7950X3D thread",
	"1 database included",
	"1 backup included",
	"Pterodactyl panel",
];
const fastRabbit = [
	"3GB RAM",
	"45GB Nvme Storage",
	"0.75 dedicated Ryzen 9 7950X3D thread",
	"1 database included",
	"1 backup included",
	"Pterodactyl panel",
];
const crazyRabbit = [
	"5GB RAM",
	"75GB Nvme Storage",
	"1.25 dedicated Ryzen 9 7950X3D thread",
	"2 database included",
	"2 backup included",
	"Pterodactyl panel",
];
---

<Layout title="Rabbit Hosting - Discord Bot Hosting" trustpilot sellix>
	<Navbar active="discordbotnode" />

	<ServicePreview
		title="Discord Bot Hosting"
		description="Discord offers free VoIP, text, and video chat servers, along with unique features for gamers like Twitch integration. Itâ€™s also a must-have for doing business in the gaming industry, and it might give other enterprises a unique edge in customer communications."
		image="/images/services/discord.svg"
	/>

	{/* Main Discord.py Bot Hosting Packages */}
	<Packages>
		<Package
			title="Sleepy Rabbit"
			description="For small-sized Discord servers."
			price="1.50"
			productID="6483418880e60"
			template={sleepRabbit}
		/>
		<Package
			title="Fast Rabbit"
			description="For medium-sized Discord servers."
			price="4.50"
			productID="648342076eed6"
			template={fastRabbit}
			popular
		/>
		<Package
			title="Crazy Rabbit"
			description="For large-sized Discord servers."
			price="7.50"
			productID="6483425e5f120"
			template={crazyRabbit}
		/>
	</Packages>

	{/* Discord.py Bot Hosting Packages */}
	<Packages2>
		<Package
			title="Sleepy Rabbit"
			description="For small-sized Discord servers."
			price="1.50"
			productID="6483418880e60"
			template={sleepRabbit}
		/>
		<Package
			title="Fast Rabbit"
			description="For medium-sized Discord servers."
			price="4.50"
			productID="648342076eed6"
			template={fastRabbit}
			popular
		/>
		<Package
			title="Crazy Rabbit"
			description="For large-sized Discord servers."
			price="7.50"
			productID="6483425e5f120"
			template={crazyRabbit}
		/>
	</Packages2>

	<EmptyComparison />

	<Footer />
	<script is:inline src="/js/default.js"></script>
</Layout>
