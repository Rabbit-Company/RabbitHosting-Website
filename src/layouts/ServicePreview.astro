---
const { title, description, image } = Astro.props;
---

<main>
	<div class="pt-10 bg-gray-900 sm:pt-16 lg:pt-8 lg:pb-14 lg:overflow-hidden">
		<div class="mx-auto max-w-7xl lg:px-8">
			<div class="lg:grid lg:grid-cols-2 lg:gap-8">
				<div
					class="mx-auto max-w-md px-4 sm:max-w-2xl sm:px-6 text-center lg:px-0 lg:flex lg:items-center"
				>
					<div class="lg:py-24">
						<h1
							class="mt-4 text-4xl tracking-tight font-extrabold text-white sm:mt-5 sm:text-6xl lg:mt-6 xl:text-6xl"
						>
							<span class="block">{title}</span>
						</h1>
						<p
							class="mt-3 text-base text-gray-300 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl"
						>
							{description}
						</p>
						<div
							class="trustpilot-widget mt-6"
							data-locale="en-US"
							data-template-id="5419b6a8b0d04a076446a9ad"
							data-businessunit-id="60198cf840bb78000169dd71"
							data-style-height="26px"
							data-style-width="100%"
							data-theme="dark"
							data-min-review-count="10"
						>
							<a
								href="https://www.trustpilot.com/review/rabbit-company.com"
								target="_blank"
								rel="noopener">Trustpilot</a
							>
						</div>
					</div>
				</div>
				<div class="mt-12 -mb-16 sm:-mb-48 lg:m-0 lg:relative">
					<div
						class="mx-auto max-w-md px-4 sm:max-w-2xl sm:px-6 lg:max-w-none lg:px-0"
					>
						<img
							class="w-full rounded-lg lg:absolute lg:inset-y-0 lg:left-0 lg:h-full lg:w-auto lg:max-w-none"
							src={image}
							alt={title}
						/>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>
